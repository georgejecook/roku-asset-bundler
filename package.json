{
    "name": "roku-asset-bundler",
    "version": "0.1.0",
    "description": "Bundles files for roku applications",
    "dependencies": {
        "fs-extra": "^8.1.0",
        "glob": "^7.1.2",
        "minami": "^1.2.3",
        "minimatch": "^3.0.4",
        "stringify-object": "^3.3.0",
        "yargs": "^16.2.0"
    },
    "devDependencies": {
        "@types/chai": "^4.2.3",
        "@types/chai-subset": "^1.3.1",
        "@types/fs-extra": "^5.0.4",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.7.8",
        "@types/sinon": "^7.0.13",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "adm-zip": "^0.4.13",
        "chai": "^4.2.0",
        "chai-subset": "^1.6.0",
        "commander": "^3.0.2",
        "debug": "^4.1.1",
        "del": "^3.0.0",
        "docdash": "^0.4.0",
        "dotenv": "4.0.0",
        "eslint": "^7.18.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-github": "^4.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-no-only-tests": "^2.4.0",
        "ink-docstrap": "1.3.0",
        "jsdoc": "3.5.5",
        "mocha": "^5.2.0",
        "request": "~2.81.0",
        "request-promise": "^4.2.4",
        "rimraf": "^2.7.1",
        "sinon": "^7.5.0",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.7",
        "util-promisifyall": "^1.0.6",
        "vinyl-paths": "^2.1.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/georgejecook/roku-asset-bundler/Roku-asset-bundler.git"
    },
    "keywords": [
        "ropm",
        "brightscript",
        "mvvm",
        "framework",
        "fun"
    ],
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "bin": {
        "bsc": "dist/index.js"
    },
    "files": [
        "dist/**/!(*.spec.*)*",
        "bslib.brs",
        "bsconfig.schema.json"
    ],
    "author": "George Cook",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/georgejecook/roku-asset-bundler/Roku-asset-bundler"
    },
    "homepage": "https://github.com/georgejecook/roku-asset-bundler/Roku-asset-bundler",
    "ts-node": {
        "transpileOnly": true,
        "compileOptions": {
            "incremental": true,
            "allowJs": false
        }
    },
    "ropm": {
        "rootDir": "src",
        "packageRootDir": "dist",
        "noprefix": [
            "maestro"
        ]
    },
    "scripts": {
        "update-schema": "npm run build && cd build && scenegraph-schema -o ../.vscode/project.xsd",
        "local": "ts-node scripts/install-local.js",
        "remote": "ts-node scripts/install-npm.js",
        "build": "node scripts/run-prod.js",
        "build-prod": "node scripts/run-prod-ide.js",
        "build-dev": "node scripts/run.js",
        "build-test": "node scripts/run-test.js",
        "rc": "ropm copy && ts-node scripts/fix-ropm-issues.js"
    }
}
